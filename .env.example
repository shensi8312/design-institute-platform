# MST-AI Platform Environment Variables
# 复制此文件为 .env 并填写实际值

# ==================== 数据库配置 ====================
DB_PASSWORD=your_secure_postgres_password
REDIS_PASSWORD=your_secure_redis_password
NEO4J_PASSWORD=your_secure_neo4j_password

# ==================== 对象存储配置 ====================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_secure_minio_secret_key

# ==================== 安全配置 ====================
JWT_SECRET=your_very_long_random_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# ==================== 监控配置 ====================
GRAFANA_PASSWORD=your_secure_grafana_password

# ==================== AI服务配置 ====================
OPENAI_API_KEY=sk-your-openai-api-key
OLLAMA_HOST=http://ollama:11434

# ==================== LLM配置 ====================
# LLM提供商: ollama (开发环境) | vllm (生产环境)
LLM_PROVIDER=ollama

# Ollama配置（开发环境）
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2:1.5b

# vLLM配置（生产环境）
VLLM_URL=http://10.10.18.2:8000
VLLM_MODEL=Qwen2.5-32B-Instruct
VLLM_API_KEY=

# ==================== 邮件配置 ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@mst-ai.com

# ==================== 第三方服务 ====================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==================== 系统配置 ====================
NODE_ENV=production
LOG_LEVEL=info
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 每天凌晨2点备份