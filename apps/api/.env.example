# 知识基座平台环境配置
# 复制此文件为 .env 并填入实际值

# 基础配置
NODE_ENV=development
PORT=9001
API_URL=http://localhost:9001
# 如果OnlyOffice运行在Docker中，这里改成宿主机可访问的IP，例如 http://10.10.6.2:9001
ONLYOFFICE_API_URL=http://localhost:9001
API_PREFIX=/api/v1

# RAGFlow 集成
USE_RAGFLOW=false  # 设置为 true 启用 RAGFlow 集成
RAGFLOW_API_URL=http://localhost:9380/api/v1
RAGFLOW_API_KEY=your_ragflow_api_key_here

# GraphRAG 集成
USE_GRAPHRAG=false  # 设置为 true 启用 GraphRAG 集成
GRAPHRAG_API_URL=http://localhost:8090/api/v1
GRAPHRAG_API_KEY=your_graphrag_api_key_here

# 数据库配置（如果需要）
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=knowledge_base

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch 配置
ES_HOST=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=

# MinIO 配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# 日志级别
LOG_LEVEL=debug
EOF < /dev/null
