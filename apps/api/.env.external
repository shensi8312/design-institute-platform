# ==================== 外网环境配置 ====================
# 服务器: 外网服务器 (所有服务都在本机)
# 说明: 部署到外网服务器时使用此配置

# 服务器配置
NODE_ENV=production
PORT=3000
API_PREFIX=/api

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=design_platform
DB_USER=postgres
DB_PASSWORD=postgres

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== JWT配置 ====================
JWT_SECRET=mst-design-platform-external-secret-2024
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=mst-refresh-token-external-secret-2024
REFRESH_TOKEN_EXPIRES_IN=30d

# ==================== CORS配置 ====================
CORS_ORIGIN=http://localhost:8000,http://localhost:3000

# ==================== 文件上传配置 ====================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=524288000

# ==================== LLM配置 ====================
LLM_PROVIDER=vllm

# vLLM 文本模型 (本机)
VLLM_URL=http://localhost:8000
VLLM_ENDPOINT=http://localhost:8000/v1/chat/completions
VLLM_MODEL=deepseek-v3
VLLM_API_KEY=

# QwenVL 多模态模型 (本机)
QWENVL_URL=http://localhost:8001
QWENVL_ENDPOINT=http://localhost:8001/v1/chat/completions
QWENVL_MODEL=qwen-vl-72b
QWENVL_API_KEY=

# ==================== Embedding配置 ====================
EMBEDDING_API_BASE=http://localhost:11434/v1
EMBEDDING_MODEL=bge-large-zh-v1.5

# ==================== 向量数据库 (Milvus) ====================
MILVUS_HOST=localhost
MILVUS_ADDRESS=localhost:19530
MILVUS_PORT=19530
MILVUS_USERNAME=
MILVUS_PASSWORD=

# ==================== 图数据库 (Neo4j) ====================
NEO4J_URI=bolt://localhost:7687
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j1234

# ==================== MinIO对象存储 ====================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ==================== 文档识别服务 ====================
DOCUMENT_RECOGNITION_SERVICE=http://localhost:7001/ocr
USE_OCR_FOR_PDF=true

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
